<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.directdealing.views.home.HomeViewControllerAfterResearch">
   <top>
      <fx:include source="../navbar/navbar.fxml" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="Filtre : ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <MenuButton fx:id="filter_location" mnemonicParsing="false" text="Localisation">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="Moins de 1km" />
                        <CheckMenuItem mnemonicParsing="false" text="Moins de 2km" />
                        <CheckMenuItem mnemonicParsing="false" text="Moins de 5km" />
                        <CheckMenuItem mnemonicParsing="false" text="Moins de 10km" />
                        <CheckMenuItem mnemonicParsing="false" text="Moins de 50km" />
                     </items>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </MenuButton>
                  <MenuButton fx:id="filter_date" mnemonicParsing="false" text="Période">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="Aujourd'hui" />
                        <CheckMenuItem mnemonicParsing="false" text="Demain" />
                        <CheckMenuItem mnemonicParsing="false" text="Cette semaine" />
                        <CheckMenuItem mnemonicParsing="false" text="Ce mois-ci" />
                        <CheckMenuItem mnemonicParsing="false" text="Cette année" />
                     </items>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </MenuButton>
                  <MenuButton fx:id="filter_evaluation" mnemonicParsing="false" text="Evaluation">
                     <items>
                       <CheckMenuItem mnemonicParsing="false" text="1 étoile" />
                       <CheckMenuItem mnemonicParsing="false" text="2 étoiles" />
                       <CheckMenuItem mnemonicParsing="false" text="3 étoiles" />
                       <CheckMenuItem mnemonicParsing="false" text="4 étoiles" />
                       <CheckMenuItem mnemonicParsing="false" text="5 étoiles" />
                     </items>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </MenuButton>
                  <MenuButton fx:id="filter_price" mnemonicParsing="false" text="Price">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="Gratuit" />
                          <CheckMenuItem mnemonicParsing="false" text="Moins de 5€" />
                          <CheckMenuItem mnemonicParsing="false" text="Moins de 10€" />
                          <CheckMenuItem mnemonicParsing="false" text="Moins de 20€" />
                          <CheckMenuItem mnemonicParsing="false" text="Moins de 50€" />
                          <CheckMenuItem mnemonicParsing="false" text="Moins de 100€" />
                     </items>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </MenuButton>
                  <Button mnemonicParsing="false" onAction="#applyFilter" prefHeight="28.0" text="Ajouter les filtres" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <ListView fx:id="offersListView" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
</BorderPane>
