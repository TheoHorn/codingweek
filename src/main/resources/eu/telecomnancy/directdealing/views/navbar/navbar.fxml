<HBox alignment="CENTER" prefHeight="83.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.directdealing.views.navbar.NavBarController">
   <children>
      <Circle onMouseClicked="#backToHome" radius="27.0" stroke="BLACK" strokeType="INSIDE">
         <fill>
            <LinearGradient endX="1.0" endY="1.0" startX="0.4734848620313587">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.8842105269432068" green="0.02619883045554161" blue="0.02619883045554161" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.8999999761581421" green="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </fill>
         <effect>
            <Blend />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Circle>
      <HBox alignment="CENTER" prefHeight="83.0" prefWidth="349.0" spacing="10.0">
         <children>
            <TextField fx:id="search_text" prefHeight="29.0" prefWidth="288.0" promptText="Rechercher" />
            <Button mnemonicParsing="false" onAction="#searchUpdate" prefHeight="29.0" prefWidth="42.0">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@magnifying_glass.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <Label fx:id="proposal_Label" onMouseClicked="#switchToMyProposal" text="Mes Propositions">
         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <Label fx:id="request_label" onMouseClicked="#switchToRequest" text="Mes requÃªtes">
         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <Label fx:id="add_offerLabel" onMouseClicked="#switchToNewOffer" text="Ajouter">
         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <MenuButton mnemonicParsing="false">
        <items>
            <MenuItem mnemonicParsing="false" onAction="#switchToMyProposal" text="Mes offres" />
          <MenuItem mnemonicParsing="false" onAction="#switchToProfile" text="Profil" />
          <MenuItem mnemonicParsing="false" onAction="#logout" text="Deconnexion" />
        </items>
         <graphic>
            <ImageView fitHeight="39.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@user_picture.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </MenuButton>
   </children>
</HBox>
